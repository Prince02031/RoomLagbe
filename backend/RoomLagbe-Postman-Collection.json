        {
          "name": "Register Student",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_student\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\",\n  \"email\": \"john@student.com\",\n  \"phone\": \"+8801712345678\",\n  \"role\": \"student\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Register Owner",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
